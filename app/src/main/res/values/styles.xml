<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="StyleButtonSmall" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_default_radius</item>
        <item name="android:textSize">@dimen/text_size5</item>
        <item name="android:textStyle">normal</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleButtonMedium" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/shape_default_radius</item>
        <item name="android:textSize">@dimen/text_size6</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleButtonStrokes" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_size5</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="StyleProgressButton">
        <item name="android:background">@drawable/shape_default_radius</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/white</item>
        <item name="pb_textSize">@dimen/text_size7</item>
        <item name="pb_loaderTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mainEditText">
        <item name="android:textSize">@dimen/text_size4</item>
        <item name="android:textColor">@color/gray2Application</item>
        <item name="android:textColorHint">@color/grayApplication</item>
        <item name="android:background">@drawable/shape_main_et</item>
        <item name="android:elevation">1.5dp</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="ThemeDialogCustom">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/lightGrayApplication</item> <!--you can give your color here. that will change all divider color in your app.-->
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> <!-- You can change thickness here.-->

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="radiusImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/application_radius</item>
    </style>

    <style name="minRadiusImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/min_application_radius</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_round</item>
    </style>

<!--    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">-->
<!--        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>-->

<!--    </style>-->

    <style name="MyTooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAppearance">@style/MyTooltip.TextAppearance</item>
    </style>

    <style name="MyTooltip.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/gray2Application</item>
        <item name="android:textSize">@dimen/text_size4</item>
    </style>

</resources>